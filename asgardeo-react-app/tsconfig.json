{
    "compilerOptions": {
        "target": "ES6",
        "jsx": "react",
        "module": "ESNext",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "typings/**/*",
        "src/**/*", 
        "config.js"    
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
